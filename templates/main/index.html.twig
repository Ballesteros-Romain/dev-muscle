<main class="container">
   <section class="row">
   <div class="col-12">
      <h1>Site e-commerce</h1>
         <h3>Bienvenue dans notre boutique</h3>
   </div>
   {% for category in category %}
      {% if category.parent == null %}
         <div class="col-12">
            <h2>{{category.name}}</h2>
         </div>
   {% else %}
      <div class="col-5">
         <div class="card h-100">
            <div class="card-body">
               <h3 class="card-title">{{category.name }}</h3>
               <a href="{{path('categorie_list', {slug: category.slug})}}" class="btn btn-primary">Voir les produits</a>
            </div>
         </div>
    </div>
   </section>
</main>
{% endif %}
{% endfor %}

