<main class="">
   <section class="section">
      <div class="">
         <h1 class="title" style="margin-left: 5%;">Site e-commerce</h1>
         <h3 style="text-align: center;">Bienvenue dans notre boutique</h3>
   
      </div>
         {% for category in category %}
         {% if category.parent == null %}
            <div class="categorie">
               <h2>{{category.name}}</h2>
      </div>
         {% else %}
      <div class="carte">
         <div class="card">
            <div class="card-body">
               <h3 class="card-title">{{category.name }}</h3>
               <a href="{{path('categorie_list', {slug: category.slug})}}" class="btn">Voir les produits</a>
            </div>
         </div>
    </div>
   </section>
</main>
{% endif %}
{% endfor %}
    <aside class="aside">
   <div class="img-card">
      <img class="img-commerce" src="https://www.webmarketing-com.com/wp-content/uploads/2017/07/tof-ecommerce.jpg" alt="photo e-commerce">
   </div>
</aside>
{% endblock %}